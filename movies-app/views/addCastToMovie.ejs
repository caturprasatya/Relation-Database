<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    <%= error %>    
    <div class="container">
            <form action="/movie/add/cast/<%= movies.id %>" method="POST">
                <h1><b><%= movies.name %></b></h1>
                <hr>
                
                <p>Please fill in this form to input data.</p>
                <label for="role"><B>Aktor/Aktris :</B></label><br>
                <select name="castId" id="role">
                    <% casts.forEach(cast =>{ %>
                        <option value="<%= cast.id %>"><%= cast.getFullname() %> </option>
                    <% }) %> 
                </select><br>
                <label for="role"><b>Role</b></label><br>
                <input type="text" placeholder="e.g Aktor Utama" name="role" id="role">
                <br><br>
                <button type="submit" >Input</button>
            </form>

            <hr>
            
            
            <div class="container signin">
                <p>Do you want to cancel the input? <button><a href="/movie">Back Home</a></button>.</p>
            </div>
            <hr>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>name</th>
                        <th>role</th>
                    </tr>
                </thead>
                <tbody style="background-color: #fce38a;"> 
                    <% movies.Casts.forEach( cast =>{ %>
                        <tr class="table-success">
                            <td><%= cast.fullname %></td>
                            <td><%= cast.MovieCast.role %></td>
                            <% }) %> 
                        </tr>      
                    </tbody>
                </table>
            </div>
        </body>