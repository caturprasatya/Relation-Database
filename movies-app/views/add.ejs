<body>
    <%= error %>     
    <form action="/movie/add" method="POST">
        <div class="container">
                <h1><%= error %></h1> 
            <h1>Input New Movie</h1>
            <p>Please fill in this form to input data.</p>
            <hr>
            
            <label for="name"><b>Name</b></label><br>
            <input type="text" placeholder="e.g Civil Wars" name="name" id="name">
            <br>
            <label for="year"><b>Released Year</b></label><br>
            <input type="year" placeholder="e.g: 1999" name="year" id="year">
            <br>
            <label for="sel-genre">Genre :</label><br>
            <select name="genre" id="sel-genre">
                <option value="">--Please choose an option--</option>
                <option value="Animation">Animation</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Horor">Horor</option>
                <option value="Religious">Religious</option>
                <option value="Thriller">Thriller</option>
                <option value="Action">Action</option>
            </select>
            <button type="submit" class="btn">Input</button>

            <hr>
            
        </div>
        
        <div class="container signin">
            <p>Do you want to cancel the input? <button><a href="/movie">Back Home</a></button>.</p>
        </div>
    </form>
</body>