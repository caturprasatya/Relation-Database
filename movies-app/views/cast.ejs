
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <title>Check All Production</title>
    </head>
    <body">
        <h1>List Cast</h1>
        <table class="table" style="width: fit-content;">
            <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Birt Year</th>
                <th>Phonenumber</th>
                <th>Gender</th>
                <th>Option</th>
            </tr>
            </thead>
            <tbody style="background-color: #fce38a;">
            <% casts.forEach(cast => {%> 
            <tr class="table-success">
                <td><%= cast.getFullname() %></td>
                <td><%= cast.birth_year %></td>
                <td><%= cast.phone_number %></td>
                <td><%= cast.gender %></td>
                <td> <a href="/cast/edit/<%= cast.id %>"><button>Edit</button></a> | <a href="/cast/delete/<%= cast.id %>" onclick="return confirm('Are sure you want delete this?')"><button>Delete</button></a> | <a href="/cast/listmovie/<%= cast.id %>"><button>See Movie</button></a></td>
                <%  });  %>
            </tr>
            </tbody>
        </table>
    </body>
    </html>