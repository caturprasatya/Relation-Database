<body>    
    <form action="/cast/edit/<%= data.id %>" method="POST">
        <div class="container">
            <h1>Edit Data Cast</h1>
            <p>Please fill in this form to input data.</p>
            <hr>
            
            <label for="firstname"><b>Firstname</b></label><br>
            <input type="text" value="<%= data.first_name %>" name="first_name" id="firstname">
            <br>
            <label for="lastname"><b>Lastname</b></label><br>
            <input type="text" value="<%= data.last_name %>" name="last_name" id="lastname">
            <br>
            <label for="year"><b>Birthyear</b></label><br>
            <input type="year" value="<%= data.birth_year%>" name="birth_year" id="year">
            <br>
            <label for="phone"><b>Phonenumber</b></label><br>
            <input type="text" value="<%= data.phone_number %>" name="phone_number" id="phone">
            <br>
            <label for="gender">Gender</label><br>
            <input type="radio" id="gender" name="gender" value="male" <%= data.gender === "male" ? "checked" : ""%> >
            <label for="">Male</label>

            <input type="radio" id="gender"name="gender" value="female" <%= data.gender === "female" ? "checked" : ""%> >
            <label for="">Female</label>

            <button type="submit" class="btn">Input</button>

            <hr>
            
        </div>
        
        <div class="container signin">
            <p>Do you want to cancel the input? <button><a href="/cast">Back Home</a></button></p>
        </div>
    </form>
</body>